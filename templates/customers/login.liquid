<div class="container">
    <div class="main-login-field">
      <div class="box">
        <h2>Login</h2>
        <p>Enter Your e-mail & Password</p>
        {% form 'customer_login' %}
          {{ form.errors | default_errors }}
          <div class="input-group">
            <input type="email" name="customer[email]" id="customer_email" placeholder="Email Address">
          </div>
          <div class="input-group">
            <input type="password" name="customer[password]" id="customer_password" placeholder="Password">
          </div>
          <div class="recaptcha">
            This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.
          </div>
          <div class="input-group">
            <input type="submit" value="Sign In" class="btn">
          </div>
          <div class="social-login">
            <button type="button">Sign in with Facebook</button>
            <button type="button" class="google">Sign in with Google</button>
          </div>
        {% endform %}       
      </div>
      <hr>
      <div class="box">
        <h2>Create Account</h2>
        {% form 'create_customer' %}
          {{ form.errors | default_errors }}
          <div class="input-group">
            <input type="text" name="customer[first_name]" id="first_name" placeholder="First Name">
          </div>
          <div class="input-group">
            <input type="text" name="customer[last_name]" id="last_name" placeholder="Last Name">
          </div>
          <div class="input-group">
            <input type="email" name="customer[email]" id="email" placeholder="Email">
          </div>
          <div class="input-group">
            <input type="password" name="customer[password]" id="password" placeholder="Password">
          </div>
          <div class="input-group">
            <label> <input type="checkbox" name="subscribe"> Subscribe for Newsletter </label>
          </div>
          <div class="recaptcha">
            This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.
          </div>
          <div class="input-group">
            <input type="submit" value="Create my account" class="btn">
          </div>
        {% endform %}
      </div>
    </div>
  </div>
  