        {% if customer %}
          <a href="/account/logout">Log out</a>
        {% else %}
          <a href="/account/login">Log in</a>
          <a href="/account/register">Sign up</a>
        {% endif %}
        <a href="/book-a-call">Book a Free Call</a>
      </div>
    </div>
